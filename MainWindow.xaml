<pu:WindowX x:Class="Note.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Note"
        xmlns:pu="https://opensource.panuon.com/wpf-ui"
        mc:Ignorable="d"
        pu:WindowXCaption.Height="0"
        MouseLeftButtonDown="MainWindow_OnMouseLeftButtonDown"
        Loaded="MainWindow_OnLoaded"
        Background="Transparent"
        Title="MainWindow" Height="450" Width="800">
    <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="20" Background="White">
        <Grid >
            <ContentPresenter Content="{Binding NowView,UpdateSourceTrigger=PropertyChanged}"></ContentPresenter>
        </Grid>
    </Border>

</pu:WindowX>
